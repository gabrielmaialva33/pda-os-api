{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "declaration": true,
    "lib": [
      "es2020"
    ],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@address/*": [
        "src/modules/address/*"
      ],
      "@auth/*": [
        "src/modules/auth/*"
      ],
      "@collaborator/*": [
        "src/modules/collaborator/*"
      ],
      "@health/*": [
        "src/modules/health/*"
      ],
      "@logger/*": [
        "src/modules/logger/*"
      ],
      "@phone/*": [
        "src/modules/phone/*"
      ],
      "@role/*": [
        "src/modules/role/*"
      ],
      "@user/*": [
        "src/modules/user/*"
      ]
    }
  },
  "include": [
    "test/**/*",
    "src/**/*"
  ],
  "strict": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "noImplicitReturns": true,
  "noFallthroughCasesInSwitch": true,
  "noUncheckedIndexedAccess": true,
  "noPropertyAccessFromIndexSignature": true
}
